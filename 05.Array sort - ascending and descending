#include <stdio.h>

void sort_array(int *arr, int n) {
  int i, j;

  for (i = 0; i < n; i++) {
    for (j = 0; j < n - i - 1; j++) {
      if (arr[j] > arr[j + 1]) {
        int temp = arr[j];
        arr[j] = arr[j + 1];
        arr[j + 1] = temp;
      }
    }
  }
}

void print_array(int *arr, int n) {
	int i;
  for (i = 0; i < n; i++) {
    printf("%d ", arr[i]);
  }
  printf("\n");
}

int main() {
	printf(" mahesh reddy \n 192210708 \n");
  int arr[] = {10, 5, 2, 3, 1};
  int n = sizeof(arr) / sizeof(arr[0]);

  sort_array(arr, n);
  printf("Sorted array in ascending order: \n");
  print_array(arr, n);

  sort_array(arr, n);
  printf("Sorted array in descending order: \n");
  print_array(arr, n);

  return 0;
}
