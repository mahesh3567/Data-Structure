#include <stdio.h>

int find_largest_element(int *arr, int rows, int cols) {
  int i, j,max_element;
   max_element = arr[0];

  for (i = 0; i < rows; i++) {
    for (j = 0; j < cols; j++) {
      if (max_element < arr[j]) {
        max_element = arr[j];
      }
    }
  }

  return max_element;
}

int main() {
	printf(" mahesh reddy \n 192210708 \n");
  int arr[3][3] = {
      {1, 2, 3},
      {4, 5, 6},
      {7, 8, 9},
  };

  int max_element = find_largest_element(arr, 3, 3);

  printf("The largest element in the 2D array is: %d\n", max_element);

  return 0;
}
