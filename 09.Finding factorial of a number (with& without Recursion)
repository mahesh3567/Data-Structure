#include <stdio.h>

int factorial(int n) {
  if (n == 0) {
    return 1;
  } else {
    return n * factorial(n - 1);
  }
}

int main() {
	printf(" mahesh reddy \n 192210708 \n");
  int n;

  printf("Enter a number: ");
  scanf("%d", &n);

  int factorial_value = factorial(n);

  printf("The factorial of %d is: %d\n", n, factorial_value);

  return 0;
}
